// PRESENTATION
section.presentation
    .container.container-main
        .presentation-wrapper
            // TOP SLIDER WRAPPER
            .presentation-slider-wrapper
                h2.presentation__title Топ проекты
                // TOP slider
                .swiper.top-slider
                    .swiper-wrapper
                        //slide
                        .swiper-slide
                           +top-project-mix("project01", "ООО «ГСП-7» (Газстройпром)", "Обучение > 5 000 слушателей ежегодно <br> СОУТ > 2 500 рабочих мест")
                        //slide
                        .swiper-slide
                           +top-project-mix("project01", "ООО «ГСП-7» (Газстройпром)", "Обучение > 5 000 слушателей ежегодно <br> СОУТ > 2 500 рабочих мест")
                    // pagination
                    .swiper-pagination
                // slider controls
                .presentation-slider-controls
                    button.slider-prev-xs#slider-prev-top
                        svg.svg-prev
                            use(href="./img/spriteSvg.svg#svg-prev")
                    button.slider-next-xs#slider-next-top
                        svg.svg-next
                            use(href="./img/spriteSvg.svg#svg-next")
                // link
                .presentation-link-wrapper
                    a(href="#!").arrow-link Cмотреть все
                        svg.svg-arrow-right
                            use(href="./img/spriteSvg.svg#svg-arrow-right")
            // REVIEWS SLIDER WRAPPER
            .presentation-slider-wrapper
