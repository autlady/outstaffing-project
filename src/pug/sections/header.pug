                        a(href="#!").btn-open-menu Услуги
                        a(href="#!") Контакты
                    .header-search
                        button(type="submit").header-search__btn
                            svg.svg-search
                                use(href="./img/spriteSvg.svg#svg-search")
                        input(type="text" id="header-search" class="header-search__input" placeholder="Поиск по сайту")
                        .search-hint
                            ul
                                li
                                    a(href="#!") Cсылка 1
