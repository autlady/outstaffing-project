mixin top-project-mix(img, title, text)
    // top-project
    .top-project
        .top-project__img
            img(src="./img/presentation/" + img + ".webp", srcset="./img/presentation/" + img + "@2x.webp 2x", alt="project", loading="lazy")
        .top-project__content
            h3.top-project__title !{title}
            p.top-project__text !{text}